<%= simple_form_for @part do |f| %>    
 
  <%= f.input :name, :label => '物料名称：' %> 
  <%= f.input :spec, :label => '规格：' %>
  <%= f.input :in_date, :label => '入库日期：', :as => :string %> 
  <div style="padding-left:67px">入库数量：&nbsp;&nbsp;<%= @part.in_qty %></div>
  <%= f.input :unit, :label => '单位：', :collection => return_unit, :selected => @part.unit %>
  <%= f.input :stock_qty, :label => '库存数量：' %> 
  <%= f.input :supplier, :label => '供应商：' %>
  <%= f.input :manufacturer, :label => '制造商：' %>  
  <%= f.input :inspection, :label => '验收记录：' %>
  <%= f.input :storage_location, :label => '存放地点：' %>
  <%= f.input :note, :label => '备注：', :input_html => {:rows => 6}  %>
   
  <%= f.button :submit, '保存' %>  
<% end %>  


