<%= simple_form_for([@customer, @comm_log]) do |f| %>    
 
  <%= f.input :subject, :label => "关于：" %>  
  <%= f.input :contact_with, :label => "客户联系人名&电话： " %>  
  <%= f.input :via, :label => "联系方式： ", :collection => set_contact_via %>
  <%= f.input :log, :label => "内容 ：", :input_html => {:rows => 4} %>   
  <%= f.input :purpose, :label => "联系目的： ", :collection => set_contact_purpose, :as => :radio %>  
  <%= f.button :submit, '保存' %>  
<% end %> 