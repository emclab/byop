<%= simple_form_for @project do |f| %>    
 
  <%= f.input :customer_id, :label => '客户:', :readonly => true, :required => false, :input_html => {:value => @project.customer.name} %>
  <%= f.input :name, :label => '项目名称：', :readonly => true, :required => false, :input_html => {:value => @project.name} %>  
  <%= f.input :status, :label => '项目状态：', :readonly => true, :required => false, :input_html => {:value => @project.status} %>
  <%= f.input :install_start_date, :label => '安装开始日期：', :as => :string %>   
  <%= f.input :turn_over_requirement, :label => '验收交付：', :input_html => { :rows => 4} %>         
  
  <%= f.button :submit, '保存' %>  
<% end %>  


