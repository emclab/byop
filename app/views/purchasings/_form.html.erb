<%= simple_form_for([@project, @purchasing]) do |f| %>    

  <div style="padding-left:68px">项目名称：&nbsp;&nbsp;<%= @project.name %></div> 
  <%= f.input :prod_name, :label => '名称：' %> 
  <%= f.input :part_num, :label => '产品#：' %>
  <%= f.input :spec, :label => '规格：', :input_html => {:rows => 4} %>  
  <%= f.input :qty, :label => '数量：' %> 
  <%= f.input :unit, :label => '单位：', :collection => return_unit, :selected => @purchasing.unit %>
  <%= f.input :unit_price, :label => '单价（￥）：' %>
  <%= f.input :total, :label => '总金额￥：' %>
  <%= f.input :manufacturer_id, :label => '制造厂家：', :collection => return_mfg, :label_method => :name, :value_method => :id, :include_blank => true %>
  <%= f.input :supplier_id, :label => '供应商：', :collection => return_supplier, :label_method => :name, :value_method => :id, :include_blank => true %>
  <%= f.input :eng_id, :label => '责任工程师：', :collection => return_employee('mech_eng', 'hydr_eng', 'inst_eng', 'elec_eng', 'src_eng', 'vp_eng'), :label_method => :name, :value_method => :id %>
  <%= f.input :pur_eng_id, :label => '外购工程师：', :collection => return_employee('pur_eng'), :label_method => :name, :value_method => :id %>
  <%= f.input :proj_module_id, :label => '部件：', :collection => return_proj_module(@project), :label_method => :name, :value_method => :id %>
  <%= f.input :delivered, :label => '到货？：', :collection => [['是',true],['否',false]], :selected => @purchasing.delivered %>
  <%= f.input :order_date, :label => '订购日期：', :as => :string %> 
  <%= f.input :delivery_date, :label => '预定到货日期：', :as => :string %> 
  <%= f.input :actual_receiving_date, :label => '实际到货日期：', :as => :string %> 

  <div style="padding-left:68px">盖章？：&nbsp;&nbsp;<%= @purchasing.stamped %></div> <p></p>
  <div style="padding-left:68px">工程师批准：&nbsp;&nbsp;<%= @purchasing.approved_by_eng %></div> <p></p>
  <div style="padding-left:68px">审批人：&nbsp;&nbsp;<%= @purchasing.approve_eng.name if @purchasing.approve_eng_id.present? %></div>  <p></p>
  <div style="padding-left:68px">审批日期：&nbsp;&nbsp;<%= @purchasing.approve_date_eng.strftime("%Y/%m/%d") if @purchasing.approve_date_eng.present? %></div>   <p></p>
  <div style="padding-left:68px">工程付总批准：&nbsp;&nbsp;<%= @purchasing.approved_by_vp_eng %></div> <p></p>
  <div style="padding-left:68px">审批人：&nbsp;&nbsp;<%= @purchasing.approve_vp_eng.name if @purchasing.approve_vp_eng_id.present?  %></div> <p></p>
  <div style="padding-left:68px">审批日期：&nbsp;&nbsp;<%= @purchasing.approve_date_vp_eng.strftime("%Y/%m/%d") if @purchasing.approve_date_vp_eng.present? %></div> <p></p> 
  <div style="padding-left:68px">采购批准：&nbsp;&nbsp;<%= @purchasing.approved_by_pur_eng %></div> <p></p>
  <div style="padding-left:68px">审批人：&nbsp;&nbsp;<%= @purchasing.pur_eng.name if @purchasing.approve_pur_eng_id.present? %></div> <p></p>
  <div style="padding-left:68px">审批日期：&nbsp;&nbsp;<%= @purchasing.approve_date_pur_eng.strftime("%Y/%m/%d") if @purchasing.approve_date_pur_eng.present? %></div>  <p></p>
  <div style="padding-left:68px">厂长批准：&nbsp;&nbsp;<%= @purchasing.approved_by_ceo %></div> <p></p>
  <div style="padding-left:68px">审批人：&nbsp;&nbsp;<%= @purchasing.approve_ceo.name if @purchasing.approve_ceo_id.present?  %></div> <p></p>
  <div style="padding-left:68px">审批日期：&nbsp;&nbsp;<%= @purchasing.approve_date_ceo.strftime("%Y/%m/%d") if @purchasing.approve_date_ceo.present? %></div>  <p></p> 
  
  <%= f.button :submit, '保存' %>  
<% end %>  


