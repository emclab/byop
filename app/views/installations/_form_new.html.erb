<%= simple_form_for([@project, @installation]) do |f| %>    

  <%= f.input :proj_name, :label => '项目名称:', :readonly => true, :required => false, :input_html => {:value => @project.name} %> 
  <%= f.input :proj_install_address, :label => '安装地址：', :readonly => true, :required => false, :input_html => {:value => @project.install_address} %>  
  <%= f.input :install_name, :label => '名称：' %> 
  <%= f.input :inst_eng_id, :label => '安装工程师：', :collection => return_employee('inst_eng'), :label_method => :name, :value_method => :id %>
  <%= f.input :start_date, :label => '开始日期：', :as => :string %> 
  <%= f.input :finish_date, :label => '完成日期：', :as => :string %> 
     
  <%= f.button :submit, '保存' %>  
<% end %>  


