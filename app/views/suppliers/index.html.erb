<div id="main_body">
<h1>供应商</h1>
<div class="emclab_pagination"><%= will_paginate %></div>
<table>
  <tr>
    <th></th>
    <th>简称</th>
    <th>开始日期</th>
      <th>联系人</th>
      <th>电话</th>
      <% if has_create_right? %>
      <th>Active?</th>
      <% end %>
    <th>北冶零件</th>
    <th>上次审厂日期</th>
    <th></th>
 
  </tr>

<% @suppliers.each do |supplier| %>
  <tr>
  	<td><%= link_to 'Show', "/view_handler?index=1&url=#{supplier_path(supplier)}" if has_show_right? %></td>
    <td><%= supplier.short_name %></td>
    <td><%= supplier.date_since.strftime("%Y/%m/%d") unless supplier.date_since.nil? %></td>
    <td><%= supplier.contact %></td>
    <td><%= supplier.phone %></td>
    <% if has_create_right? %>
      <td><%= supplier.active %></td>
    <% end %>
    <td><%= supplier.product_supplied %></td> 
    <td><%= supplier.last_eval_date.strftime("%Y/%m/%d") unless supplier.last_eval_date.nil? %></td> 
    <td><%= link_to 'Edit', "/view_handler?index=1&url=#{edit_supplier_path(supplier)}" if has_update_right? %></td>

  </tr>
<% end %>
</table>

  <%= link_to '输入供应商', "/view_handler?index=1&url=#{new_supplier_path}" if has_create_right? %>
  &nbsp;<%= link_to 'Back', "/view_handler?index=0" %>
</div>
